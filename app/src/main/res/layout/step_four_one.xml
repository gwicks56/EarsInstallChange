<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView27"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/progress_meter_step_3_1"
        tools:layout_editor_absoluteY="0dp"/>

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="20dp"
        android:layout_height="32dp"
        app:srcCompat="@drawable/ears_icon"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView27"/>

    <ImageView
        android:id="@+id/imageView28"
        android:layout_width="272dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/now_let_s_set_up_you"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView14"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <ImageView
        android:id="@+id/imageView29"
        android:layout_width="122dp"
        android:layout_height="133dp"
        app:srcCompat="@drawable/notif_step_3_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView28"
        app:layout_constraintHorizontal_bias="0.501"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="349dp"
        android:layout_height="207dp"
        android:layout_marginTop="39dp"
        android:textSize="19sp"
        android:text="The music you listen to tells us about your mood.\n\nAccess to your noticications lets us track the music you're listening to accross different apps.\n\nGo to Android Settings and toggle the EARS tool on."
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView29"
        android:layout_marginLeft="32dp"
        app:layout_constraintHorizontal_bias="0.488"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"/>

    <ImageView
        android:id="@+id/imageView30"
        android:layout_width="0dp"
        android:scaleType="fitXY"
        android:layout_height="55dp"
        app:srcCompat="@drawable/notif"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.512"/>


</android.support.constraint.ConstraintLayout>