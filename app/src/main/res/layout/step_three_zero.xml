<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/first_let_s_install"
        android:layout_marginLeft="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView14"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="8dp"/>

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="20dp"
        android:layout_height="32dp"
        app:srcCompat="@drawable/ears_icon"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView19"/>

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="231dp"
        android:layout_height="211dp"
        app:srcCompat="@drawable/step_one"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView13"
        />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="253dp"
        android:layout_height="41dp"
        app:srcCompat="@drawable/language_and_emoji_c"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView15"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:layout_editor_absoluteY="308dp"
        tools:layout_editor_absoluteX="72dp"
        app:layout_constraintHorizontal_bias="0.503"/>

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/automated_computer_s"
        app:layout_constraintTop_toBottomOf="@+id/imageView16"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.503"/>

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="0dp"
        android:scaleType="fitXY"
        android:layout_height="50dp"
        android:contextClickable="true"
        android:onClick="skipThisStep"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/install_keyboard"
        />


    <ImageView
        android:id="@+id/imageView19"

        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top_bar_start"
        tools:layout_editor_absoluteY="-4dp"/>
</android.support.constraint.ConstraintLayout>